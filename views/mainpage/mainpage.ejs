<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/mainPage.css" />

    <link
      href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <title>Apni Gadi</title>
  </head>
  <body>
    <div class="mainImg">
      <h1 class="mainHeading">APNI GADI</h1>
      <div class="mainFunctions">
        <form class="mainForm" id="loginForm" action="" method="get">
          <button
            class="btnFunctions"
            type="button"
            onclick="setAction('user')"
          >
            User Login
          </button>
          <button
            class="btnFunctions"
            type="button"
            onclick="setAction('user')"
          >
            Renter Login
          </button>
        </form>
      </div>
      <a class="mainSignup" href="/signup" target="_blank"
        >First time? <span class="letsGo">Lets Go </span>
      </a>
    </div>
  </body>
</html>

<script>
  function setAction(type) {
    let form = document.getElementById("loginForm");
    if (type === "user") {
      form.action = "/login";
    } else if (type === "renter") {
      form.action = "/login";
    }
    form.submit(); 
  }
</script>
