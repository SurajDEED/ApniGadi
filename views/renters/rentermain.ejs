<% layout('/layouts/boilerplate') %>
<div
  class="mx-auto mb-3 grid w-full max-w-7xl items-center space-y-4 px-2 py-10 md:grid-cols-2 md:gap-6 md:space-y-0 lg:grid-cols-4"
>
  <div
    class="relative aspect-[16/9] w-auto rounded-md md:aspect-auto md:h-[400px]"
  >
    <img
      src="https://res.cloudinary.com/dmwtxx5qv/image/upload/v1713200407/car_1_xevewq.png"
      alt="carimg"
      class="z-0 h-full w-full rounded-md object-contain"
    />
    <div
      class="absolute inset-0 rounded-md bg-gradient-to-t from-gray-900 to-transparent"
    ></div>
    <div class="absolute bottom-4 left-4 text-left">
      <a
        href="/renter/<%=id%>/rentShow"
        class="mt-2 inline-flex cursor-pointer items-center text-xl font-semibold text-white"
        class="rentOptionPara"
        >All Cars →</a
      >
    </div>
  </div>
  <div
    class="relative aspect-[16/9] w-auto rounded-md md:aspect-auto md:h-[400px]"
  >
    <img
      src="https://res.cloudinary.com/dmwtxx5qv/image/upload/v1713200406/plus_sirzjy.png"
      alt="carimg"
      class="z-0 h-full w-full rounded-md object-contain"
    />
    <div
      class="absolute inset-0 rounded-md bg-gradient-to-t from-gray-900 to-transparent"
    ></div>
    <div class="absolute bottom-4 left-4 text-left">
      <a
        href="/renter/rentadd"
        class="mt-2 inline-flex cursor-pointer items-center text-xl font-semibold text-white"
        class="rentOptionPara"
        >Add a new car →</a
      >
    </div>
  </div>
  <div
    class="relative aspect-[16/9] w-auto rounded-md md:aspect-auto md:h-[400px]"
  >
    <img
      src="https://res.cloudinary.com/dmwtxx5qv/image/upload/v1713200408/package_w8dpa2.png"
      alt="carimg"
      class="z-0 h-full w-full rounded-md object-contain"
    />
    <div
      class="absolute inset-0 rounded-md bg-gradient-to-t from-gray-900 to-transparent"
    ></div>
    <div class="absolute bottom-4 left-4 text-left">
      <a
        href="/renter/<%=id%>/orders"
        class="mt-2 inline-flex cursor-pointer items-center text-xl font-semibold text-white"
        class="rentOptionPara"
        >My orders →</a
      >
    </div>
  </div>
</div>
