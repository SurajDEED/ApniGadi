<script>
  function setAction(type) {
    let form = document.getElementById("loginForm");
    if (type === "user") {
      form.action = "/login";
    } else if (type === "renter") {
      form.action = "/login";
    }
    form.submit(); // Submit the form with the updated action
  }
</script>
