<% layout('/layouts/boilerplate') %>
<section>
  <div class="grid grid-cols-1 lg:grid-cols-2 m-4">
    <div
      class="relative flex items-end px-4 pb-10 pt-60 sm:px-6 sm:pb-16 md:justify-center lg:px-8 lg:pb-24"
    >
      <div class="absolute inset-0">
        <img
          class="h-full w-full rounded-md object-cover object-top"
          src="https://images.unsplash.com/photo-1646617747563-4f080bddf282?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt=""
        />
      </div>
      <div
        class="absolute inset-0 bg-gradient-to-t from-black to-transparent"
      ></div>
      <div class="relative">
        <div class="w-full max-w-xl xl:mx-auto xl:w-full xl:max-w-xl xl:pr-24">
          <h3 class="text-4xl font-bold text-white">
            "Unlock Your Journey with Us - Where Every Mile Tells a Story!"
          </h3>
          <ul class="mt-10 grid grid-cols-1 gap-x-8 gap-y-4 sm:grid-cols-2">
            <li class="flex items-center space-x-3">
              <div
                class="inline-flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500"
              >
                <svg
                  class="h-3.5 w-3.5 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </div>
              <span class="text-lg font-medium text-white">
                Driving License Verfication
              </span>
            </li>
            <li class="flex items-center space-x-3">
              <div
                class="inline-flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500"
              >
                <svg
                  class="h-3.5 w-3.5 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </div>
              <span class="text-lg font-medium text-white">
                Authentic Payments
              </span>
            </li>
            <li class="flex items-center space-x-3">
              <div
                class="inline-flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500"
              >
                <svg
                  class="h-3.5 w-3.5 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </div>
              <span class="text-lg font-medium text-white">
                Authorized Renters
              </span>
            </li>
            <li class="flex items-center space-x-3">
              <div
                class="inline-flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500"
              >
                <svg
                  class="h-3.5 w-3.5 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </div>
              <span class="text-lg font-medium text-white"> Best Cars </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div
      class="flex items-center justify-center px-4 py-10 sm:px-6 sm:py-16 lg:px-8 lg:py-24"
    >
      <div class="xl:mx-auto xl:w-full xl:max-w-sm 2xl:max-w-md">
        <h2 class="text-3xl font-bold leading-tight text-black sm:text-4xl">
          Sign up
        </h2>
        <p class="mt-2 text-base text-gray-600">
          Already have an account?
          <a
            href="/login"
            title=""
            class="font-medium text-black transition-all duration-200 hover:underline"
          >
            Sign In
          </a>
        </p>
        <form
          action="/signup/userSign"
          method="post"
          novalidate
          class="needs-validation mt-8"
          enctype="multipart/form-data"
        >
          <div class="space-y-5">
            <div>
              <label for="name" class="text-base font-medium text-gray-900">
                Full Name
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="Name"
                  type="text"
                  name="name"
                  id="name"
                  required
                />
                <div class="valid-feedback">Nice Name</div>
                <div class="invalid-feedback">Name Missing</div>
              </div>
            </div>
            <div>
              <label for="image" class="text-base font-medium text-gray-900">
                Upload Image
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  type="file"
                  name="profileimage"
                  id="image"
                  required
                />
                <div class="invalid-feedback">Upload an image</div>
              </div>
            </div>

            <div>
              <label for="username" class="text-base font-medium text-gray-900">
                Username
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="Username"
                  type="text"
                  name="username"
                  id="username"
                  required
                />
                <div class="valid-feedback">Looks good</div>
                <div class="invalid-feedback">Username Missing</div>
              </div>
            </div>

            <div>
              <label for="email" class="text-base font-medium text-gray-900">
                Email
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="Email"
                  type="email"
                  name="email"
                  id="email"
                  required
                />
                <div class="invalid-feedback">Email Missing</div>
              </div>
            </div>

            <div>
              <label for="mobileNo" class="text-base font-medium text-gray-900">
                Mobile Number
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="Number"
                  type="tel"
                  name="mobileNo"
                  id="mobileNo"
                  pattern="[0-9]{10}"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a 10-digit number.
                </div>
              </div>
            </div>

            <div>
              <label for="age" class="text-base font-medium text-gray-900">
                Age
              </label>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="eg 18"
                  type="number"
                  name="age"
                  id="age"
                  min="18"
                  required
                />
                <div class="invalid-feedback">Age should be above 18</div>
              </div>
            </div>

            <div>
              <div class="flex items-center justify-between">
                <label
                  for="password"
                  class="text-base font-medium text-gray-900"
                >
                  Password
                </label>
              </div>
              <div class="mt-2">
                <input
                  class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                  placeholder="Password"
                  type="password"
                  name="password"
                  id="password"
                  required
                />
                <div class="invalid-feedback">Password Missing</div>
              </div>
            </div>
            <div>
              <button
                class="inline-flex w-full items-center justify-center rounded-md bg-black px-3.5 py-2.5 font-semibold leading-7 text-white hover:bg-black/80"
              >
                Genrate Otp
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="ml-2"
                >
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
