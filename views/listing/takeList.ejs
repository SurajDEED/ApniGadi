<% layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Enter New Car</h3>
      <form
        action="/listings"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Enter title</label>
          <input
            placeholder="Title"
            type="text"
            name="listing[title]"
            id="title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Look's good</div>
          <div class="invalid-feedback">Tittle Missing</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Enter Description</label>
          <textarea
            placeholder="Description"
            class="form-control"
            name="listing[description]"
            id="description"
            cols="30"
            rows="6"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Upload an image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Enter Price</label>
            <input
              placeholder="Price"
              name="listing[price]"
              id="price"
              class="form-control"
              required
            />

            <div class="invalid-feedback">Enter a valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter Country</label>
            <input
              placeholder="Country"
              type="text"
              name="listing[country]"
              id="country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter a valid Country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Enter location</label>
          <input
            placeholder="Location"
            type="text"
            name="listing[location]"
            id="location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid Location</div>
        </div>
        <button class="btn btn-dark mb-4">Add</button>
      </form>
    </div>
  </div>
</body>
