<% layout('/layouts/boilerplate') %>

<section class="mx-auto w-full max-w-7xl px-4 py-4 min-h-[90vh]">
  <div class="mt-6 flex flex-col">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-200 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-normal text-gray-700"
                >
                  <span></span>
                </th>
                <th
                  scope="col"
                  class="px-12 py-3.5 text-left text-sm font-normal text-gray-700"
                >
                  Title
                </th>
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-normal text-gray-700"
                >
                  PickUp Date
                </th>
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-normal text-gray-700"
                >
                  Drop Date
                </th>
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-normal text-gray-700"
                >
                  Amount Paid
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% for(let listing of popOrderDet) { %>
              <tr>
                <td class="whitespace-nowrap px-4 py-4">
                  <div class="flex items-center">
                    <div class="h-10 max-w-xl flex-shrink-0">
                      <img
                        class="h-10 max-w-xl rounded-full object-contain"
                        src="<%= listing.carId.image.url %>"
                        alt=""
                      />
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= listing.carId.title %>
                      </div>
                      <div class="text-sm text-gray-700">@<%= listing.owner.username %></div>
                    </div>
                  </div>
                </td>
                <td class="whitespace-wrap px-12 py-4">
                  <div class="text-sm text-gray-900 mb-2"><%= listing.customer.email %></div>
                  <div class="text-sm text-gray-700 "><%= listing.customerAddress %></div>
                </td>
                <td class="whitespace-nowrap px-4 py-4">
                  <span
                    class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800"
                  >
                    <%= listing.pickUpDate%>
                  </span>
                </td>
                <td class="whitespace-nowrap px-4 py-4 text-sm text-gray-700">
                  <%= listing.dropDate%>
                </td>
                <td
                  class="whitespace-nowrap px-4 py-4 text-right text-sm font-medium"
                >
                  <a href="#" class="text-gray-700">&#8377; <%= listing.amount.toLocaleString("en-IN") %></a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
