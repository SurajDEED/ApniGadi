<% layout('/layouts/boilerplate') %>

<!-- <div class="row mt-3"> -->
<h1 class="text-center text-3xl m-4">Edit your Profile</h1>
<div class="col-8 offset-2">
  <form
    method="POST"
    action="/account/profile/<%= editProfile._id %>?_method=PUT"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <div class="mb-3">
      <p class="m-3">Original Image</p>

      <img
        src="<%=editProfile.image.url%>"
        alt=""
        style="height: 200px; width: 200px"
      />
    </div>

    <div>
      <label for="image" class="form-label">Upload a new image</label>
      <input type="file" name="profile[image]" class="form-control" />
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Edit name</label>
      <input
        type="text"
        name="profile[name]"
        value="<%= editProfile.name %>"
        id="name"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Name cannot be empty</div>
    </div>

    <div class="mb-3">
      <label for="username" class="form-label">Edit username</label>
      <input
        type="text"
        name="profile[username]"
        value="<%= editProfile.username %>"
        id="username"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Username cannot be empty</div>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Edit Email</label>
      <input
        type="email"
        name="profile[email]"
        value="<%= editProfile.email %>"
        id="email"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Email cannot be empty</div>
    </div>

    <div class="mb-3">
      <label for="mobileNo" class="form-label">Edit mobile number</label>
      <input
        placeholder="Number"
        type="tel"
        name="profile[mobileNo]"
        id="mobileNo"
        value="<%= editProfile.mobileNo %>"
        class="form-control"
        pattern="[0-9]{10}"
        required
      />
      <div class="invalid-feedback">
        Mobile number cannot be more than 10 or empty
      </div>
    </div>

    <button class="btn btn-dark mt-3 mb-4">Save Changes</button>
  </form>
</div>
